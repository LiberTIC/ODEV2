{% extends 'base.html.twig' %}


{% set active="calendar" %}


{% block body %}

    <div class="page-header">
        <h1>Modifier un calendrier</h1>
    </div>

    <div class="col-lg-4">
        <h3>Accéder aux calendriers</h3>
        <p>Pour accéder à vos calendriers, cliquez ici: <a href="{{path('calendar_home')}}">Liste des calendriers</a></p>
    </div>

    <div class="col-lg-8">
        <form class="well form-horizontal" method="post">

            {{ form_errors(form) }}

            {{ form_row(form.displayname) }}

            {{ form_row(form.description) }}

            <a href='{{ path("calendar_read",{"slug":slug}) }}' class="btn btn-default pull-left">
                Annuler
            </a>
            <button type="submit" class="btn btn-info pull-right">Modifier</button>
            <div style="width:0px;height: 30px">
            </div>

        </form>
    </div>

{% endblock %}